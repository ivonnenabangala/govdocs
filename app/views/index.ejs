<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Government Documents</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >
</head>
<body class="bg-light">
  <div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="fw-bold text-primary">Government Documents</h1>
      <a href="/upload" class="btn btn-success">Upload Document</a>
    </div>

    <% if (documents.length === 0) { %>
      <div class="alert alert-info text-center">
        No documents uploaded yet.
      </div>
    <% } else { %>
      <div class="list-group">
        <% documents.forEach(doc => { %>
          <a href="<%= doc.file_url %>" target="_blank" class="list-group-item list-group-item-action">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <h5 class="mb-1"><%= doc.title %></h5>
                <p><%= doc.description %></p>
                <small class="text-muted">Uploaded on <%= new Date(doc.created_at).toLocaleDateString() %></small>
              </div>
              <span class="badge bg-primary rounded-pill">PDF</span>
            </div>
          </a>
        <% }) %>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
